<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dexnamic.alwayscharged"
    android:versionCode="11"
    android:versionName="2.1.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name="com.dexnamic.alwayscharged.AlwaysCharged"
        android:backupAgent="MyPrefsBackupAgent"
        android:debuggable="true"
        android:icon="@drawable/battery"
        android:label="@string/app_name" >
        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAIwIFuER3ObsRuVV2SwJAWK96tpjpXzkw1Im4esw" />

        <activity
            android:name=".MainPreferenceActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AlarmActivity"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name=".AdvancedPreferences"
            android:label="@string/advanced_settings" >
        </activity>
        <activity
            android:name=".EditAlarmPreferenceActivity"
            android:label="@string/alarm_detail" >
        </activity>
        <activity
            android:name=".ListAlarmsActivity"
            android:label="@string/set_alarm" >
        </activity>

        <receiver android:name=".AlarmReceiver" />
        <receiver android:name=".PowerReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>
        <receiver android:name=".ResetAlarmsReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REPLACED" />

                <data
                    android:path="com.dexnamic.alwayschanged"
                    android:scheme="package" />
            </intent-filter>
        </receiver>

        <service android:name=".AlarmService" />
        <service android:name=".PowerSnoozeService" />

        <!-- In App Purchasing -->
        <service android:name=".billing.BillingService" />

        <receiver android:name=".billing.BillingReceiver" >
            <intent-filter>
                <action android:name="com.android.vending.billing.IN_APP_NOTIFY" />
                <action android:name="com.android.vending.billing.RESPONSE_CODE" />
                <action android:name="com.android.vending.billing.PURCHASE_STATE_CHANGED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".billing.UpgradeProActivity"
            android:label="@string/upgrade_pro" >
        </activity>
        <!--  -->
    </application>

</manifest>